{
    "name": "h5-dev-mobile-market-survey",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "vue-cli-service lint",
        "newEnv": "node ./mx-build/newEnv.js",
        "dev": "vue-cli-service serve --mode local",
        "build": "vue-cli-service build --mode test",
        "prod": "vue-cli-service build --mode prod",
        "sit": "vue-cli-service build --mode sit",
        "eslint-fix": "eslint src/**/**/*.vue --fix",
        "format-code": "prettier-eslint --write \"src/**/*.js\" \"src/**/*.vue\""
    },
    "dependencies": {
        "archiver": "^3.0.0",
        "axios": "^0.18.1",
        "core-js": "^2.6.5",
        "fastclick": "^1.0.6",
        "lib-flexible": "^0.3.2",
        "postcss-px2rem": "^0.3.0",
        "vue": "^2.6.10",
        "vue-router": "^3.0.3",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.7.0",
        "@vue/cli-plugin-eslint": "^3.7.0",
        "@vue/cli-service": "^3.7.0",
        "@vue/eslint-config-prettier": "^4.0.1",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.16.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-vue": "^5.0.0",
        "less": "^3.0.4",
        "less-loader": "^4.1.0",
        "prettier-eslint-cli": "^4.7.1",
        "vue-template-compiler": "^2.5.21"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "es6": true
        },
        "extends": [
            "plugin:vue/essential",
            "plugin:prettier/recommended",
            "eslint:recommended"
        ],
        "rules": {
            "no-console": 0,
            "no-useless-escape": 0,
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "semi": true,
                    "tabWidth": 4,
                    "trailingComma": "none",
                    "bracketSpacing": true,
                    "jsxBracketSameLine": true,
                    "insertPragma": true,
                    "requirePragma": false
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "prettier": {
        "trailingComma": "none",
        "singleQuote": true,
        "semi": true,
        "printWidth": 100,
        "tabWidth": 4
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
